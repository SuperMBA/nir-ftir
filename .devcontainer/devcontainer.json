{
  "name": "nir-ftir (conda/ftir311)",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "remoteUser": "mambauser",
  "workspaceFolder": "/work/nir-ftir",
  "mounts": [
  "source=${localWorkspaceFolder},target=/work/nir-ftir,type=bind"
  // УДАЛИТЬ: "source=mlruns,target=/work/nir-ftir/mlruns,type=volume"
],
  "containerEnv": {
    "MLFLOW_TRACKING_URI": "file:///work/nir-ftir/mlruns"
  },
  "settings": {
    "python.defaultInterpreterPath": "/opt/conda/envs/ftir311/bin/python",
    "python.terminal.activateEnvironment": true,
    "jupyter.kernels.filter": [ "Python (ftir311)" ]
  },
"postCreateCommand": "bash -lc 'git config --global core.autocrlf input; pre-commit install || true'"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-azuretools.vscode-docker",
        "ms-vscode-remote.remote-containers",
        "ms-vscode-remote.remote-wsl",
        "eamodio.gitlens"
      ]
    }
  },
  "runArgs": ["--shm-size=1g"],
  "updateRemoteUserUID": true
}
